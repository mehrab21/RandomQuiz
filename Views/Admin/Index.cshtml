@model IEnumerable<RandomQuizAnswer.Models.Domain.Question>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int index = 1;
}

<div class="container mt-5">
    <h1 class="mb-4 text-center text-primary">Admin Dashboard</h1>

    <div class="mb-4 text-end">
        <a class="btn btn-success btn-lg" asp-action="AddQuestion" asp-controller="Admin">
            ➕ Add New Question
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Question</th>
                    <th scope="col">Difficulty</th>
                    <th scope="col">Options</th>
                    <th scope="col">Answer</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@question.Text</td>
                        <td>@question.Deficulty</td>
                        <td>
                            <ul class="mb-0">
                                @foreach (var option in question.Options)
                                {
                                    <li>@option</li>
                                }
                            </ul>
                        </td>
                        <td>@question.Answer</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="EditQuestion" asp-controller="Admin" class="btn btn-primary btn-sm" asp-route-id="@question.Id">
                                    ✏️ Edit
                                </a>
                                <a asp-action="DeleteQuestion" asp-controller="Admin" class="btn btn-danger btn-sm" asp-route-id="@question.Id">
                                    🗑️ Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>
